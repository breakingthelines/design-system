{
  "name": "@breakingthelines/design-system",
  "version": "0.0.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/breakingthelines/design-system.git"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "imports": {
    "// WORKAROUND": "shadcn CLI bug generates #/lib/lib/utils - see https://github.com/shadcn-ui/ui/discussions/6834",
    "#/lib/lib/utils": "./src/lib/utils.ts",
    "#/lib/*": "./src/lib/*",
    "#/components/*": "./src/components/*",
    "#/hooks/*": "./src/hooks/*",
    "#/tokens/*": "./src/tokens/*",
    "#/utils/*": "./src/utils/*",
    "#/styles/*": "./src/styles/*",
    "#.storybook/*": "./.storybook/*",
    "#*": [
      "./*",
      "./*.ts",
      "./*.tsx",
      "./*.js",
      "./*.jsx"
    ]
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "publishConfig": {
    "access": "restricted",
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "dev": "vite",
    "build": "bunchee",
    "lint": "oxlint",
    "format": "oxfmt --write .",
    "format:check": "oxfmt --check .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@base-ui/react": "^1.0.0",
    "@phosphor-icons/react": "^2.1.10",
    "@tailwindcss/vite": "^4.1.17",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.26",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "shadcn": "^3.6.2",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17",
    "tw-animate-css": "^1.4.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.3",
    "@storybook/addon-a11y": "^10.1.11",
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/addon-themes": "^10.1.11",
    "@storybook/addon-vitest": "^10.1.11",
    "@storybook/react-vite": "^10.1.11",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/browser-playwright": "4.0.16",
    "@vitest/coverage-v8": "4.0.16",
    "bunchee": "^6.9.3",
    "oxfmt": "^0.21.0",
    "oxlint": "^1.36.0",
    "playwright": "^1.57.0",
    "storybook": "^10.1.11",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vitest": "4.0.16"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  }
}
