{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["typescript", "react", "unicorn"],
  "categories": {
    "correctness": "error",
    "suspicious": "warn",
  },
  "rules": {
    "no-unused-vars": "warn",
    "react/exhaustive-deps": "warn",
  },
  "ignorePatterns": ["dist", "node_modules", "*.config.js", "*.config.ts"],
}
