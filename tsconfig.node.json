{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2023",
    "lib": ["ES2023"],
    "module": "ESNext",
    "types": ["node", "vite/client"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "baseUrl": ".",
    "paths": {
      /* WORKAROUND: shadcn CLI has a bug where it generates "#/lib/lib/utils" instead of "#/lib/utils"
       * See: https://github.com/shadcn-ui/ui/discussions/6834
       * This mapping redirects the broken import to the correct file */
      "#/lib/lib/utils": ["./src/lib/utils.ts"],

      "#/lib/*": ["./src/lib/*"],
      "#/components/*": ["./src/components/*"],
      "#/hooks/*": ["./src/hooks/*"],
      "#/tokens/*": ["./src/tokens/*"],
      "#/styles/*": ["./src/styles/*"]
    }
  },
  "include": ["vite.config.ts", ".storybook/**/*.ts"]
}
